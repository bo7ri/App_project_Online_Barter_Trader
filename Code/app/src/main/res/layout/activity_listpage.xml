<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/AddPrdct"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Add Prodcut"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PrdctTitle"
        android:layout_width="379dp"
        android:layout_height="53dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="textPersonName|textCapCharacters"
        android:text="Product Tile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddPrdct" />

    <EditText
        android:id="@+id/PrdctDescription"
        android:layout_width="384dp"
        android:layout_height="213dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="textPersonName|textCapCharacters"
        android:text="Product Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrdctTitle" />

    <EditText
        android:id="@+id/PrdctPrice"
        android:layout_width="385dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName|textCapCharacters"
        android:text="Product Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrdctDescription" />

    <Button
        android:id="@+id/SubmitPrdct"
        android:layout_width="238dp"
        android:layout_height="82dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="156dp"
        android:text="Add Product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrdctDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>