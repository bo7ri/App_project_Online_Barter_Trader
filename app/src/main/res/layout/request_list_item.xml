<?xml version="1.0" encoding="utf-8"?>
<!-- Source used for help with creating CardView: https://www.geeksforgeeks.org/how-to-create-dynamic-listview-in-android-using-firebase-firestore/ [Mar 16, 2023] -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/requestListItemProductTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/requestListItemImage"
            android:padding="10dp"
            android:text="Product Title:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/requestListItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_500"
            android:padding="5dp" />

        <TextView
            android:id="@+id/requestListItemRequesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/requestListReceiverLabel"
            android:padding="10dp"
            android:text="Receiver"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/requestListReceiverLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@id/requestListItemImage"
            android:padding="10dp"
            android:text="Requested by:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/requestListItemProductTitleInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/requestListItemProductTitleLabel"
            android:padding="10dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>